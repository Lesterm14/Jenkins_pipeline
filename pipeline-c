pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Lesterm14/Jenkins_pipeline.git'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Example deployment (could be SCP, SSH, or script)
                sh 'echo Deployed to Laptop 2'
            }
        }
    }
}
